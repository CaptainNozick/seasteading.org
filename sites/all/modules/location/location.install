  }

  // Garbage collect {location_fax} by hand.
  if (db_table_exists('location_fax')) {
    $ret[] = update_sql('DELETE FROM {location_fax} WHERE lid NOT IN (SELECT lid FROM {location})');
  }

  return $ret;
}

